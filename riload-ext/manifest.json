{
  "name": "Auto Refresh",
  "version": "1.0",
  "description": "Automatically refreshes the active tab every 10 seconds.",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
